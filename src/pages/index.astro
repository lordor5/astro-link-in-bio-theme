---
import config from "../../config.js";

import Layout from "../layouts/Layout.astro";
import Profile from "../components/Profile.astro";
import SocialLinks from "../components/SocialLinks.astro";
import LinkButton from "../components/LinkButton.astro";
import ProductLink from "../components/ProductLink.astro";
---

<Layout title={`${config.user.name} - Link in Bio`}>
  <div
    class="mx-auto px-4 py-8 sm:max-w-xl md:max-w-2xl lg:max-w-3xl xl:max-w-4xl"
  >
    <main class="container mx-auto">
      <Profile />
      <SocialLinks />
      <div class="space-y-4 mt-6">
        {
          config.links.map((link) => (
            <LinkButton title={link.title} url={link.url} icon={link.icon} />
          ))
        }
      </div>
      <div class="space-y-4 mt-6">
        {
          config.products.map((product) => (
            <ProductLink
              title={product.title}
              description={product.description}
              url={product.url}
              price={product.price}
              includePriceOnSite={product.includePriceOnSite}
              image={product.image}
            />
          ))
        }
      </div>
      <a href="https://s.click.aliexpress.com/e/_DnKXnTP" target="_blank"
        ><img
          src='//ae01.alicdn.com/kf/S5043c2157a6f4288a4391a5e87b1098ed.jpg_80x80.jpg"'
        /></a
      >
    </main>
  </div>
</Layout>
